# ----- Database -----
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=parcferme
POSTGRES_PASSWORD=localdev
POSTGRES_DB=parcferme
DATABASE_URL=Host=localhost;Port=5432;Database=parcferme;Username=parcferme;Password=localdev

# ----- Redis -----
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_URL=localhost:6379

# ----- Elasticsearch -----
ELASTICSEARCH_URL=http://localhost:9200

# ----- JWT Auth -----
JWT_SECRET=your-super-secret-key-change-in-production-min-32-chars
JWT_ISSUER=parcferme-api
JWT_AUDIENCE=parcferme-client
JWT_EXPIRY_MINUTES=60

# ----- OAuth Providers -----
# Google OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Discord OAuth
DISCORD_CLIENT_ID=
DISCORD_CLIENT_SECRET=

# ----- External APIs -----
# OpenF1 (free, no key required but good to track)
OPENF1_BASE_URL=https://api.openf1.org/v1

# ----- Application -----
ASPNETCORE_ENVIRONMENT=Development
ASPNETCORE_URLS=http://localhost:5000
FRONTEND_URL=http://localhost:3000
